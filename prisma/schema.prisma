generator client {
  provider        = "prisma-client-js"
  engineType      = "library"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

model Project {
  id              String              @id @default(uuid()) @db.Uuid
  name            String
  apiKey          String              @unique
  prometheusUrl   String?
  sourceType      String              @default("prometheus") // "vercel" | "prometheus"
  healthCheckPath String?             // e.g. "/api/health" (for vercel probing)
  vercelToken     String?             // optional Vercel API token
  slackWebhookUrl String?
  createdAt       DateTime            @default(now())

  deployments     DeploymentSession[]
}

model DeploymentSession {
  id           String           @id @default(uuid()) @db.Uuid
  projectId    String           @db.Uuid
  project      Project          @relation(fields: [projectId], references: [id])
  commitSha    String?
  environment  String
  status       String
  startTime    DateTime         @default(now())
  endTime      DateTime?
  maxRiskScore Float?

  metrics      MetricSnapshot[]
}

model MetricSnapshot {
  id         String            @id @default(uuid()) @db.Uuid
  sessionId  String            @db.Uuid
  session    DeploymentSession @relation(fields: [sessionId], references: [id])
  timestamp  DateTime          @default(now())
  rate       Float
  errorRate  Float
  p99        Float
  saturation Float
  riskScore  Float
}

model Incident {
  id          String   @id @default(uuid()) @db.Uuid
  title       String
  description String
  rootCause   String
  resolution  String
  embedding   Unsupported("vector(12)")
}
